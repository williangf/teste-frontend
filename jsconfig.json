{
  "compilerOptions": {
    "baseUrl": "./src/",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@lib/*": ["lib/*"],
      "@hocs/*": ["hocs/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@assets/*": ["assets/*"],
      "@configs/*": ["configs/*"],
      "@services/*": ["services/*"],
      "@contexts/*": ["contexts/*"],
      "@components/*": ["components/*"]
    }
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
